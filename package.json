{
  "name": "@badge-sdk/web",
  "version": "0.1.0",
  "description": "Embed Badge's mobile wallet management features within your existing application.",
  "keywords": [
    "badge",
    "mobile wallet",
    "wallet",
    "apple wallet",
    "google wallet"
  ],
  "license": "MIT",
  "homepage": "https://www.trybadge.com",
  "bugs": {
    "url": "https://github.com/storr/sdk-web/issues"
  },
  "repository": "github:storr/sdk-web/",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "files": [
    "./dist/**",
    "./src/**"
  ],
  "scripts": {
    "commit": "cz",
    "dev": "vite playground",
    "check": "tsc && tsc -P tsconfig.node.json && pnpm lint",
    "lint": "pnpm prettier --check && pnpm eslint",
    "eslint": "eslint .",
    "prettier": "prettier \"**/*.{md,yml,json,html}\"",
    "fix": "pnpm prettier --write && pnpm eslint --fix",
    "build": "vite build",
    "clean": "rm -rf dist node_modules/.vite",
    "release": "release-it"
  },
  "packageManager": "pnpm@8.15.9",
  "devDependencies": {
    "@eslint/js": "9.18.0",
    "@mantine/core": "7.15.1",
    "@mantine/hooks": "7.15.1",
    "@release-it/conventional-changelog": "10.0.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.10.7",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-prettier": "5.2.2",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-unicorn": "56.0.1",
    "prettier": "3.4.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "release-it": "18.1.1",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0",
    "vite": "5.4.8",
    "vite-plugin-dts": "4.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@zod/mini": "4.0.0-beta.0"
  }
}
